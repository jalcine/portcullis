- page_title 'Join the Awesome'
.row.center-text
  .large-8.small-10.columns.large-centered.small-centered
    %h1 Sign Up
    %p Join Vettio by reconnecting with one of the mediums below. It's easy!
.row.collapse
  .page.buttons.large-6.small-12.columns
    %a{href: omniauth_authorize_path(resource_name, :facebook, task: :new), class: 'facebook', 'data-no-turbolinks'=> true}
      %i.icon
      Sign Up 
    %a{href: omniauth_authorize_path(resource_name, :gplus, task: :new), class: 'gplus', 'data-no-turbolinks'=> true}
      %i.icon
      Sign Up 
  .page.classical.large-6.small-12.columns
    = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { 'data-abide'=> true, class: 'custom' }) do |f|
      %fieldset
        .row
          .small-12.columns
            = f.label :email do
              = f.email_field :email, autofocus: true, placeholder: 'awesome@yourback.com', required: true
        .row
          .small-12.columns
            = f.label :password do
              = f.password_field :password, placeholder: '********', required: true
        - if devise_mapping.rememberable?
          .row
            .small-9.columns.row
              .small-2.columns
                = f.check_box :remember_me
              .small-10.columns
                = f.label :remember_me
            .small-3.columns
              .small-12
                = f.submit 'Sign Up', class: 'button success shiny radius small'
          .row
            .small-10.columns.row.small-centered
              = render 'users/shared/links'
= javascript_include_tag asset_url('users/registrations')
