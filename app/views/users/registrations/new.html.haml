- page_title 'Join the Awesome'
.row.center-text
  .large-8.small-10.columns.large-centered.small-centered
    %h1 Sign Up
    %p Join Vettio by reconnecting with one of the mediums below. It's easy!
.row.collapse
  .page.buttons.large-4.small-12.columns
    - Settings.authentication.providers.each do | provider_name, _ |
      - if Settings.toggles.features.include? "auth:#{provider_name}"
        %a{href: omniauth_authorize_path(resource_name, provider_name, task: :new), class: provider_name}
          %i.fa-fw.icon
          = "Sign Up With #{provider_name.capitalize}"
  .page.classical.large-8.small-12.columns
    = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { 'data-abide'=> true, class: 'custom' }) do |f|
      %fieldset
        .row.collapse
          .small-4.columns
            = f.label :email, class: 'prefix'
          .small-8.columns
            = f.email_field :email, autofocus: true, placeholder: 'joinus@vettio.com', required: true
        .row.collapse
          .small-4.columns
            = f.label :password, class: 'prefix'
          .small-8.columns
            = f.password_field :password, placeholder: '********', required: true
        .row.collapse
          .small-4.columns
            = f.label :password_confirmation, class: 'prefix'
          .small-8.columns
            = f.password_field :password_confirmation, placeholder: '********', required: true
        - if devise_mapping.rememberable?
          .row
            .small-9.columns.row
              .small-10.small-centered.columns
                = f.label :remember_me do
                  = f.check_box :remember_me, checked: true
                  Remember Me
            .small-3.columns
              .small-12
                = f.button type: :submit, class: 'button success shiny radius small', title: 'Sign Up' do
                  Sign Up
                  %i.fa.fa-arrow-right
  .row
    .small-10.columns.small-centered.center-text
      = render 'users/shared/links'
