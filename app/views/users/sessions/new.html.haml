- page_title 'Join the Awesome'
%section
  .row.center-text
    .large-8.small-10.columns.large-centered.small-centered
      %h1 Sign In
      %p Get into Vettio by reconnecting with one of the mediums below. It's easy!
  .row.collapse
    .page.buttons.large-6.small-12.columns
      %a{href: omniauth_authorize_path(resource_name, :facebook, task: :new), class: 'facebook'}
        %i.icon
        Sign In 
      %a{href: omniauth_authorize_path(resource_name, :gplus, task: :new), class: 'gplus'}
        %i.icon
        Sign In 
    .page.classical.large-6.small-12.columns
      = form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'custom' }) do |f|
        %fieldset
          .row
            .large-12.small-12.columns
              = f.email_field :email, autofocus: true, placeholder: 'awesome@yourback.com'
          .row
            .large-12.small-12.columns
              = f.password_field :password, placeholder: '********'
          - if devise_mapping.rememberable?
            .row
              .small-9.columns.row
                .small-2.columns
                  = f.check_box :remember_me
                .small-10.columns
                  = f.label :remember_me
              .small-3.columns
                .small-12
                  = f.submit 'Sign In', class: 'button success shiny radius small'
            .row
              .small-10.columns.row.small-centered
                = render 'users/shared/links'
