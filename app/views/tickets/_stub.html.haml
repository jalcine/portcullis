%li.ticket{data: {ticket: ticket.id}}
  .numerical-box
    %b.price.fit-text= number_to_currency(ticket.price, precision: 2)
    = timeago_tag (ticket.date_end.present? ? ticket.event.date_end : ticket.date_end)
  .contextual-box
    %h2= ticket.name
    %div= ticket.description
  .actions-box
    %a.fit-text{href: event_ticket_url(ticket.event, ticket),rel: :nofollow, data: {ticket: {action: :delete}, method: :delete}}
      Delete
    %a.fit-text{href: '#', data: {reveal: {id: :modal_edit_ticket, ajax: edit_event_ticket_url(ticket.event,ticket)}, ticket: {action: :edit}}}

      Edit
    - if can? :order, ticket 
      %a.buy.fit-text{href: '#', data: {ticket: {action: :buy}}}
        Buy
