%li.ticket{data: {ticket: {id: ticket.id}}}
  .status-region
    %i.fa.fa-asterisk
  .content-region
    .titlebar
      %h2{title: ticket.name}
        = ticket.name
        %span.price
          = number_to_currency(ticket.price, precision: 2) if ticket.priced?
          = "FREE" if ticket.free?
          = "DONATION" if ticket.donation?
        %span.time
          - if Time.zone.now >= ticket.date_end
            closed
            = timeago_tag ticket.date_end
          - elsif Time.zone.now >= ticket.date_start
            closes
            = timeago_tag ticket.date_end
          - else
            opens
            = timeago_tag ticket.date_start
    .metadata
      %div= ticket.description.html_safe
  .actions-region
    - if can? :destroy, ticket
      %a.button.alert.expand{href: ticket_path(ticket.event, ticket), rel: :nofollow, data: {remote: true, ticket: {action: :delete}, method: :delete}} Delete
    - if can? :modify, ticket
      %a.button.secondary.expand{href: '#', data: {reveal: {id: :modal_edit_ticket, ajax: edit_ticket_path(ticket.event,ticket)}, ticket: {action: :edit}}} Edit
    - if can? :order, ticket
      %label
        %input{type: :number, min: 0, max: ticket.max_quantity.present? ? ticket.max_quantity : nil, data: {ticket: :quantity}, value: 0, placeholder: '#'}
